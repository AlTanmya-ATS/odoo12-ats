<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit retirement Form View to add mail followers-->
    <record id="retirement_inherited_form_view" model="ir.ui.view">
        <field name="name">retirement form</field>
        <field name="model">asset_management.retirement</field>
        <field name="inherit_id" ref="retirement_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </xpath>
        </field>
    </record>

