<?xml version="1.0" encoding="UTF-8"?>
<odoo>
     <record id="asset_management_sitting_view_form" model="ir.ui.view">
         <field name="name">asset res config sitting form</field>
         <field name="model">res.config.settings</field>

         <field name="arch" type="xml">
             <form string="Sitting">
                 <sheet>
                     <group>
                         <field name="tracking"/>
                     </group>
                 </sheet>
             </form>
         </field>
     </record>

    <!-- Inherit Form View to Modify it -->
    <record id="asset_management_sitting_view_form" model="ir.ui.view">
        <field name="name">asset res config sitting form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[hasclass('settings')]" position="inside">
                <div class="app_settings_block" data-string="Asset Management" string="Asset Management" data-key="asset_management" >
                    <h2>Asset Management</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-xs-12 col-md-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <label for="group_tracking_product"/>
                                <field name="Tracking Product" widget="upgrade_boolean"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>



    <record id="action_asset_management_config_settings" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'asset_management'}</field>
    </record>

    <menuitem id="menu_asset_management_general_settings" name="Settings" parent="asset_management_menu"
           action="action_asset_management_config_settings" groups="base.group_system"/>

</odoo>

