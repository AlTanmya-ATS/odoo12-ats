<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--category book form for one2many filed-->
     <record model="ir.ui.view" id="category_books_one2many_form_view">
            <field name="name">category_books.form</field>
            <field name="model">asset_management.category_books</field>
            <field name="arch" type="xml">
                <form string="Category Books Form" >
                    <sheet>
                        <group>

                            <group>
                                <field name="name" invisible="1" context="parent and {'category_id':parent.id}"/>
                                <field name="category_id" />
                                <field name="book_id"/>
                                 <field name="journal_id"/>
                                <field name="group_entries"/>
                                <field name="book_with_cate" invisible="1"/>
                            </group>

                            <group>
                                <field name="depreciation_method"/>
                                <field name="method_time"/>
                                <field name="method_number"
                                       attrs="{'invisible':[('method_time','!=','number')],'required':[('method_time','=','number')]}"/>
                                <field name="life_months"/>
                            </group>
                            <group>
                                <field name="asset_cost_account" attrs="{'readonly':[('book_id','=',False)]}"/>
                                <field name="asset_clearing_account" attrs="{'readonly':[('book_id','=',False)]}"/>
                                <field name="depreciation_expense_account"
                                       attrs="{'readonly':[('book_id','=',False)]}"/>
                                <field name="accumulated_depreciation_account"
                                       attrs="{'readonly':[('book_id','=',False)]}"/>
                            </group>
                            <group>

                                <field name="asset_cost_analytic_account_id"
                                       attrs="{'readonly':[('asset_cost_account','=',False)]}"
                                       groups="analytic.group_analytic_accounting"
                                       placeholder="asset cost analytic account"/>
                                <field name="asset_cost_analytic_tag_ids"
                                       attrs="{'readonly':[('asset_cost_account','=',False)]}"
                                       groups="analytic.group_analytic_accounting" widget="many2many_tags"
                                       placeholder="asset cost analytic tag"/>

                                <field name="asset_clearing_analytic_account_id"
                                       attrs="{'readonly':[('asset_clearing_account','=',False)]}"
                                       groups="analytic.group_analytic_accounting"
                                       placeholder="asset clearing analytic account"/>
                                <field name="asset_clearing_analytic_tag_ids"
                                       attrs="{'readonly':[('asset_clearing_account','=',False)]}"
                                       groups="analytic.group_analytic_accounting" widget="many2many_tags"
                                       placeholder="asset clearing analytic tag"/>

                                <field name="depreciation_expense_analytic_account_id"
                                       attrs="{'readonly':[('depreciation_expense_account','=',False)]}"
                                       groups="analytic.group_analytic_accounting"
                                       placeholder="depreciation expense analytic account"/>
                                <field name="depreciation_expense_analytic_tag_ids"
                                       attrs="{'readonly':[('depreciation_expense_account','=',False)]}"
                                       groups="analytic.group_analytic_accounting" widget="many2many_tags"
                                       placeholder="depreciation expense analytic tag"/>

                                <field name="accumulated_depreciation_analytic_account_id"
                                       attrs="{'readonly':[('accumulated_depreciation_account','=',False)]}"
                                       groups="analytic.group_analytic_accounting"
                                       placeholder="accumulated depreciation analytic account"/>
                                <field name="accumulated_depreciation_analytic_tag_ids"
                                       attrs="{'readonly':[('accumulated_depreciation_account','=',False)]}"
                                       groups="analytic.group_analytic_accounting" widget="many2many_tags"
                                       placeholder="accumulated depreciation analytic tag"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    <!--depreciation form one2many-->
        <record model="ir.ui.view" id="depreciation_form_one2many_view">
            <field name="name">depreciation.form</field>
            <field name="model">asset_management.depreciation</field>
            <field name="arch" type="xml">
                <form string="Depreciation Form" create="false" edit="false" delete="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="book_assets_id" invisible="1"/>
                                <field name="book_id"/>
                                <field name="asset_id"/>
                            </group>
                            <group>
                                <field name="move_id"/>
                                <field name="move_check"/>
                                <field name="move_posted_check"/>
                                <field name="sequence"/>
                            </group>
                            <group>
                                <field name="depreciation_date"/>
                                <field name="amount"/>
                                <field name="depreciated_value"/>
                                <field name="remaining_value"/>
                            </group>
                            <group>
                                <field name="dep_run_process_id"/>
                                <field name="period_id"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

            <!--transaction form one2many-->
    <record model="ir.ui.view" id="transaction_form_one2many_view">
            <field name="name">transaction.form</field>
            <field name="model">asset_management.transaction</field>
            <field name="arch" type="xml">
                <form string="Transaction Form" edit="false" create="false" delete="false">
                    <sheet>
                        <group>
                            <group>

                                <field name="book_assets_id"/>
                                <field name="asset_id"/>
                                <field name="book_id"/>
                                <field name="old_category" attrs="{'invisible':[('old_category','=',False)]}"/>
                                <field name="category_id"/>
                                <field name="trx_type"/>
                            </group>
                            <group>
                                <field name="trx_date"/>
                                <field name="move_id"/>
                                <field name="move_check"/>
                                <field name="move_posted_check"/>
                            </group>
                            <group>
                                <field name="cost"/>
                                <field name="old_cost" attrs="{'invisible':[('old_cost','=',0.0)]}"/>
                                <field name="retirement_id" attrs="{'invisible':[('retirement_id','=',False)]}"/>
                                <field name="trx_details"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    <!--assignment one2many form view-->
    <record model="ir.ui.view" id="assignment_form_one2many_view">
            <field name="name">assignment.form</field>
            <field name="model">asset_management.assignment</field>
            <field name="arch" type="xml">
                <form string="Assignment Form" create="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="asset_id"/>
                                <field name="book_id"/>
                                <field name="depreciation_expense_account"/>
                                <field name="depreciation_expense_analytic_account_id"
                                       groups="analytic.group_analytic_accounting"
                                       placeholder="depreciation expense analytic account"/>
                                <field name="depreciation_expense_analytic_tag_ids"
                                       groups="analytic.group_analytic_accounting" widget="many2many_tags"
                                       placeholder="depreciation expense analytic tag"/>

                            </group>
                            <group>
                                <field name="book_assets_id" invisible="1"/>
                                <field name="history_flag"/>
                                <field name="percentage"/>
                                <field name="responsible_id"/>
                                <field name="location_id"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="comments"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>


    <!--source line form one2many view-->
    <record model="ir.ui.view" id="source_line_one2many_form_view">
            <field name="name">source_line.form</field>
            <field name="model">asset_management.source_line</field>
            <field name="arch" type="xml">
                <form string="Source Line Form" create="false">
                    <sheet>
                        <group>
                            <group>
                                <field name="book_assets_id" invisible="1"/>
                                <field name="asset_id"/>
                                <field name="book_id"/>
                                <field name="source_type"/>
                            </group>
                            <group>
                                <field name="invoice_id"
                                       attrs="{'required':[('source_type','=','invoice')],'invisible':[('source_type','=','miscellaneous')]}"/>
                                <field name="invoice_line_ids" attrs="{'required':[('source_type','=','invoice')],'invisible':[('source_type','=','miscellaneous')]
                                        ,'readonly':[('invoice_id','=',False)]}"/>
                                <field name="amount"
                                       attrs="{'required':[('source_type','=','invoice')],'invisible':[('source_type','=','miscellaneous')]}"/>
                                <field name="invoice_id_m_type" attrs="{'invisible':[('source_type','=','invoice')]}"/>
                                <field name="invoice_line_ids_m_type"
                                       attrs="{'invisible':[('source_type','=','invoice')]}"/>
                                <field name="amount_m_type"
                                       attrs="{'required':[('source_type','=','miscellaneous')],'invisible':[('source_type','=','invoice')]}"/>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    <!--book asset form one2many field-->
      <record model="ir.ui.view" id="book_assets_form_view">
            <field name="name">book_assets form</field>
            <field name="model">asset_management.book_assets</field>
            <field name="arch" type="xml">
                <form string="Book Asset Form" create="false">
                    <header>

                        <button name="%(asset_dep_modify_action)d" string="Modify Depreciation" type="action"
                                class="oe_highlight" attrs="{'invisible':['|','|',('depreciation_computation','=',False),
                                         ('state','!=','open'),('id','=',False)]}"/>
                        <button name="validate" type="object" string="confirm" class="oe_highlight"
                                attrs="{'invisible':['|',('state','!=','draft'),('id','=',False)]}"/>
                        <button name="set_to_draft" string="Set to Draft" type="object" attrs="{'invisible': ['|','|','|',
                            ('state','!=','open'),('id','=',False),('depreciation_line_length','!=',0)]}"/>
                        <button name="compute_depreciation_board" string="Compute Depreciation" type="object"
                                class="oe_highlight"
                                attrs="{'invisible':['|','|',('depreciation_computation','=',False),('state','!=','draft'),('id','=',False)]}"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,open"/>
                    </header>

                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" name="open_entries" type="object" icon="fa-pencil">
                                <field string="Items" name="entry_count" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name" invisible="1"/>
                                <field name="book_id" options="{'no_create':True}"/>
                                <field name="asset_id"/>

                                <field name="category_id"/>
                                <field name="current_cost" force_save="1"/>
                                <field name="original_cost"
                                       attrs="{'readonly':[('state','!=','draft')],'invisible':['|',('state','=','draft'),('id','=',False)]}"/>
                                <field name="salvage_value_type"/>
                                <label for="salvage_value"/>
                                <dive>
                                    <field name="salvage_value" class="oe_inline"
                                           attrs="{'readonly':[('state','=','close')]}"/>
                                </dive>
                                <field name="salvage_value_amount"/>
                                <field name="residual_value"/>
                                <field name="depreciation_computation" invisible="1"/>
                                <field name="create_date" widget="date" readonly="1"/>
                            </group>

                            <group>
                                <field name="depreciated_flag"/>
                                <field name="depreciation_line_length" invisible="1"/>
                                <field name="allow_future_transaction"/>
                                <field name="method" force_save="1"/>
                                <field name="method_progress_factor"
                                       attrs="{'invisible':[('method','=','linear')],'readonly':[('state','!=','draft')]}"
                                       force_save="1"/>
                                <field name="method_time" force_save="1"/>
                                <field name="date_in_service"/>
                                <field name="prorate_date"/>

                                <field name="method_number" attrs="{'invisible':[('method_time','=','end')],
                                                'required':[('method_time','=','number')],'readonly':[('state','!=','draft')]}"
                                       force_save="1"/>
                                <field name="life_months" attrs="{'readonly':[('state','!=','draft')]}" force_save="1"/>
                                <field name="end_date" attrs="{'invisible':[('method_time','=','number')],
                                                'readonly':[('state','!=','draft')],'required':[('method_time','=','end')]}"
                                       force_save="1"/>
                                <field name="accumulated_value"/>
                                <field name="net_book_value"/>
                                <field name="current_cost_from_retir" invisible="1"/>
                                <field name="source_amount" invisible="1"/>
                                <field name="assign_change_flag" invisible="1"/>
                                <field name="percentage" invisible="1"/>
                            </group>
                        </group>

                        <notebook>
                            <page name="assignment" string="Assignment">
                                <field name="assignment_id" widget="section_and_note_one2many"
                                       context="{'default_book_assets_id':id,'form_view_ref':'asset_management.assignment_form_one2many_view'}"
                                       attrs="{'readonly':[('state','=','close')]}">
                                    <tree string="Assignment">
                                        <field name="responsible_id"/>
                                        <field name="location_id"/>
                                        <field name="date_from"/>
                                        <field name="percentage"/>
                                        <field name="date_to"/>
                                        <field name="history_flag"/>
                                    </tree>
                                </field>
                            </page>

                            <page name="source line" string="Source Line">
                                <field name="source_line_ids" widget="section_and_note_one2many"
                                       context="{'form_view_ref':'asset_management.source_line_one2many_form_view'}"
                                       attrs="{'readonly':[('state','=','close')]}">
                                    <tree string="Source Line">
                                        <field name="source_type"/>
                                        <field name="description"/>

                                    </tree>
                                </field>
                            </page>

                            <page name="depreciation" string="Depreciation">
                                <field name="depreciation_line_ids" widget="One2many_list" readonly="1"
                                     context="{'form_view_ref':'asset_management.depreciation_form_one2many_view'}">
                                    <tree string="Depreciation" create="false" edit="false" delete="false">
                                        <field name="depreciation_date"/>
                                        <field name="depreciated_value"/>
                                        <field name="amount"/>
                                        <field name="remaining_value"/>
                                        <field name="parent_state" invisible="1"/>
                                        <field name="move_check" widget="dep_lines_toggler"
                                               attrs="{'invisible':[('parent_state','!=','open')]}"/>
                                        <field name="move_posted_check" invisible="1"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Transactions" name="transactions">
                                <field name="transaction_id" widget="One2many_list" readonly="1"
                                context="{'form_view_ref':'asset_management.transaction_form_one2many_view'}">
                                    <tree name="Transaction" create="false" edit="false" delete="false">
                                        <field name="trx_type"/>
                                        <field name="trx_date"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>


</odoo>