<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_re_class_wizard" model="ir.ui.view">
        <field name="name">re_class_wizard</field>
        <field name="model">asset_management.re_class_wizard</field>
        <field name="arch" type="xml">
            <form string="Re Class Wizard">
                <sheet>
                    <group>
                        <field name="new_category_id"/>
                        <label for="model_id" string="Recipients"/>
                        <div>
                            <field name="model_id"/>
                            <field name="model_name" invisible="1"/>
                            <!--<field name="mailing_model_real" invisible="1"/>-->
                            <field name="reclass_domain" widget="domain"
                                   options="{'model': 'model_name'}"
                                   context="{'search_default_not_opt_out':1}"/>
                            <!--<div attrs="{'invisible': [('mailing_model_name', '!=', 'mail.mass_mailing.list')]}">-->
                            <!--<label for="contact_list_ids" string="Select mailing lists:" class="oe_edit_only"/>-->
                            <!--<field name="contact_list_ids" widget="many2many_tags"-->
                            <!--placeholder="Select mailing lists..." class="oe_inline"/>-->
                            <!--</div>-->
                        </div>
                    </group>
                </sheet>
                <footer>
                    <button name="asset_re_class" type="object" string="Re Class" class="btn-primary"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>


    <record id="action_re_class_wizard" model="ir.actions.act_window">
        <field name="name">action re_class wizard</field>
        <field name="res_model">asset_management.re_class_wizard</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_re_class_wizard"/>
        <field name="target">new</field>
    </record>


    <menuitem id="re_class_menu" name="Re Class Asset"
              parent="menu_actions_on_asset"/>

    <menuitem name="Re Class Asset" action="action_re_class_wizard"
              id="menu_re_class_asset"
              parent="re_class_menu"/>

</odoo>