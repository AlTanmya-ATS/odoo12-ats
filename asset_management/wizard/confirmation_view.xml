<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id='confirmation_wizard_form' model='ir.ui.view'>
        <field name='name'>confirmation wizard form view</field>
        <field name='model'>asset_management.confirmation_wizard</field>
        <field name='arch' type='xml'>
            <form string="Warning">
                <sheet>
                    <group>
                        <field name="text"/>
                        <field name='slist'/>

                    </group>

                </sheet>
                <footer>
                    <button name='confirm' string='Yes' class='btn-primary' type='object'/>
                    <button string='Cancel' class='btn-default' special='cancel'/>
                </footer>
            </form>
        </field>
    </record>

