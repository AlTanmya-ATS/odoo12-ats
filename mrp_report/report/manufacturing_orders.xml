<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id ="report_manufacturing_orders">
          <t t-set="doc" t-value="doc.with_context({'lang':doc.user_id.lang})" />
             <t t-call="web.external_layout">
                <div class="page">
                    <h1>Daily Manufacturing Orders </h1>
                    <table class="table table-condensed table-bordered" style="width: 100%">
                        <thead>
                            <th class="text-center" style="width: 50%">Order Number</th>
                            <th class="text-center" style="width: 50%">State</th>
                            <th class="text-center" style="width: 50%">Product</th>
                        </thead>
                        <tbody>
                             <tr>
                                <td>
                                    <span t-field="doc.name"/>
                                </td>
                                <td class="text-center">
                                   <span t-field="doc.state"/>
                                </td>
                                 <td class="text-center">
                                   <span t-field="doc.product_id.name"/>
                                </td>
                             </tr>
                        </tbody>
                    </table>
                </div>
            </t>


    </template>


    <template id="manufacturing_orders_template">
    <t t-call="web.html_container">
        <t t-foreach="docs" t-as="doc">
            <t t-call="mrp_report.report_manufacturing_orders" t-lang="doc.user_id.lang"/>
        </t>
    </t>

    </template>

</odoo>